from com.android.monkeyrunner import MonkeyRunner, MonkeyDevice
import commands
import sys
import random


#~/Desktop/adt-bundle-linux-x86_64-20130522/sdk/tools/monkeyrunner mymonkey.py


# starting script

print "Waiting for connection to Emulator."
# connection to the current device, and return a MonkeyDevice object
device = MonkeyRunner.waitForConnection()

print "start"
print "taking screenshot"

count = 2
loop = 0

while (loop < count):

 print 'Taking Screenshot No.', loop
 result = device.takeSnapshot()
 result.writeToFile("./process/Img_"+`loop`+".png",'png')
 print "Saving Picture", loop
 loop = loop + 1
 MonkeyRunner.sleep(1)




print "end"
